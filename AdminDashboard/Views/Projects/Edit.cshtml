@model Core.Models.Project

@{
    ViewData["Title"] = "Edit";
}

<h1>Editing @Model.Title</h1>

<hr />
<form asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Video" class="form-label"></label>
        <input asp-for="Video" type="file" accept="video/*" class="form-control" />
        <small class="text-muted">Leave empty to keep existing video</small>
        <span asp-validation-for="Video" class="text-danger"></span>
    </div>
    <div>
        @if(!string.IsNullOrEmpty(Model.Video))
        {
            <video src="@Model.Video" controls></video>
        }
    </div>
    <div class="mb-3">
        <label asp-for="Technologies" class="form-label"></label>
        @* <input asp-for="Technologies" class="form-control" /> *@
        <select asp-for="Technologies" class="form-control" asp-items="ViewBag.Technologies" multiple></select>

        <span asp-validation-for="Technologies" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label class="form-label">Project Images</label>
        <small class="text-danger">*</small>
    <div id="images-container">
        @for (int i = 0; i < Model.Images.Count; i++)
        {
            var img = Model.Images[i];
            <div class="image-row border rounded p-3 mb-2" data-image-id="@img.Id">
                <div class="row g-2 align-items-center">
                    <div class="col-md-2">
                        @if (!string.IsNullOrEmpty(img.Url))
                        {
                            <img src="@img.Url" alt="@img.AltText" class="img-thumbnail" style="max-width: 100px;" />
                        }
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Current Image</label>
                        <input type="hidden" name="Images[@i].Id" value="@img.Id" />
                        <input type="hidden" name="Images[@i].Url" value="@img.Url" />
                        <input type="file" name="Images[@i].ImageFile" accept="image/*" class="form-control" />
                        <small class="text-muted">Leave empty to keep existing image</small>
                    </div>
                    <div class="col-md-3">
                        <input type="text" name="Images[@i].AltText" value="@img.AltText" placeholder="Alt text (optional)" class="form-control">
                    </div>
                    <div class="col-md-2 form-check form-switch">
                        <input class="form-check-input" type="checkbox" role="switch" name="Images[@i].IsFeatured" value="true" id="img@(i)-featured" @(img.IsFeatured ? "checked" : "")>
                        <label class="form-check-label" for="img@(i)-featured">Featured</label>
                        <input type="hidden" name="Images[@i].IsFeatured" value="false">
                    </div>
                    <div class="col-md-1">
                        <button type="button" class="btn btn-danger btn-sm delete-image" data-image-id="@img.Id">×</button>
                        <input type="hidden" name="Images[@i].ToDelete" value="false" class="delete-flag" />
                    </div>
                </div>
            </div>
        }
    </div>

    <button type="button" id="add-image" class="btn btn-outline-secondary btn-sm">Add another image</button>
    </div>
    <div class="mb-3">
        <label asp-for="Client" class="form-label"></label>
        <input asp-for="Client" class="form-control" />
        <span asp-validation-for="Client" class="text-danger"></span>
    </div>

    <div class="row mb-3">
        <div class="col">
            <label asp-for="Problem" class="form-label"></label>
            <input asp-for="Problem" class="form-control" />
            <span asp-validation-for="Problem" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="Solution" class="form-label"></label>
            <input asp-for="Solution" class="form-control" />
            <span asp-validation-for="Solution" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col">
            <label asp-for="LiveUrl" class="form-label"></label>
            <input asp-for="LiveUrl" class="form-control" />
            <span asp-validation-for="LiveUrl" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="DemoUrl" class="form-label"></label>
            <input asp-for="DemoUrl" class="form-control" />
            <span asp-validation-for="DemoUrl" class="text-danger"></span>
        </div>
    </div>
    @* <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="IsFeatured" /> @Html.DisplayNameFor(model => model.IsFeatured)
        </label>
    </div> *@
    <div class="form-check form-switch mb-3">
        <input class="form-check-input" type="checkbox" role="switch" asp-for="IsFeatured" id="IsFeatured">
        <label class="form-check-label" for="IsFeatured">Display As Featured</label>
        <input type="hidden" name="IsFeatured" value="false">
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div class="py-3">
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
    <a asp-action="Index">Back to List</a>
</div>

<script>
    (function () {
        let idx = @Model.Images.Count;

        // Handle delete buttons for existing images
        document.querySelectorAll('.delete-image').forEach(btn => {
            btn.addEventListener('click', function() {
                const imageRow = this.closest('.image-row');
                const deleteFlag = imageRow.querySelector('.delete-flag');
                const imageId = this.dataset.imageId;

                if (confirm('Are you sure you want to delete this image?')) {
                    deleteFlag.value = 'true';
                    imageRow.style.opacity = '0.5';
                    imageRow.style.backgroundColor = '#f8f9fa';
                    this.disabled = true;
                    this.textContent = 'Deleted';
                }
            });
        });

        // Add new image functionality
        document.getElementById('add-image').addEventListener('click', function () {
            const container = document.getElementById('images-container');
            const row = document.createElement('div');
            row.className = 'image-row border rounded p-3 mb-2';
            row.innerHTML = `
                <div class="row g-2 align-items-center">
                    <div class="col-md-2">
                        <div class="img-thumbnail bg-light d-flex align-items-center justify-content-center" style="height: 100px;">
                            <span class="text-muted">New Image</span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">New Image</label>
                        <input type="hidden" name="Images[${idx}].Id" value="0" />
                        <input type="file" name="Images[${idx}].ImageFile" accept="image/*" class="form-control" required>
                    </div>
                    <div class="col-md-3">
                        <input type="text" name="Images[${idx}].AltText" placeholder="Alt text (optional)" class="form-control">
                    </div>
                    <div class="col-md-2 form-check form-switch">
                        <input class="form-check-input" type="checkbox" role="switch" name="Images[${idx}].IsFeatured" value="true" id="img${idx}-featured">
                        <label class="form-check-label" for="img${idx}-featured">Featured</label>
                        <input type="hidden" name="Images[${idx}].IsFeatured" value="false">
                    </div>
                    <div class="col-md-1">
                        <button type="button" class="btn btn-danger btn-sm remove-new-image">×</button>
                    </div>
                </div>`;

            // Add remove functionality for new images
            row.querySelector('.remove-new-image').addEventListener('click', function() {
                container.removeChild(row);
            });

            container.appendChild(row);
            idx++;
        });
    })();
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
