@model Core.DTOs.CreateProjectDTO

@{
    ViewData["Title"] = "Create New Project";
}

<h1>Create</h1>

<h4>Project</h4>
<hr />

<form asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <small class="text-danger">*</small>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <small class="text-danger">*</small>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="VideoFile" class="form-label"></label>
        <input asp-for="VideoFile" type="file" accept="video/*" class="form-control" />
        <span asp-validation-for="VideoFile" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Project Images</label>
        <small class="text-danger">*</small>

        <div id="images-container">
            <div class="image-row border rounded p-3 mb-2">
                <div class="row g-2 align-items-center">
                    <div class="col-md-6">
                        <input type="file" name="Images[0].ImageFile" accept="image/*" class="form-control" required>
                    </div>
                    <div class="col-md-4">
                        <input type="text" name="Images[0].AltText" placeholder="Alt text (optional)" class="form-control">
                    </div>
                    @* <div class="col-md-2 form-check">
                        <input class="form-check-input" type="checkbox" name="Images[0].IsFeatured" value="true" id="img0-featured">
                        <label class="form-check-label" for="img0-featured">Featured</label>
                    </div> *@
                    <div class="col-md-2 form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" role="switch" name="Images[0].IsFeatured" value="true" id="img0-featured">
                        <label class="form-check-label" for="img0-featured">Featured</label>
                        <input type="hidden" name="Images[0].IsFeatured" value="false">
                    </div>
                </div>
            </div>
        </div>

        <button type="button" id="add-image" class="btn btn-outline-secondary btn-sm">Add another image</button>
    </div>
    <div class="mb-3">
        <label asp-for="Technologies" class="form-label"></label>
        <small class="text-danger">*</small>

        @* <input asp-for="Technologies" class="form-control" /> *@
        <select asp-for="Technologies" class="form-control" asp-items="ViewBag.Technologies" multiple></select>
        <span asp-validation-for="Technologies" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Client" class="form-label"></label>
        <input asp-for="Client" class="form-control" />
        <span asp-validation-for="Client" class="text-danger"></span>
    </div>


    <div class="row mb-3">
        <div class="col">
            <label asp-for="Problem" class="form-label"></label>
            <small class="text-danger">*</small>
            <input asp-for="Problem" class="form-control" />
            <span asp-validation-for="Problem" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="Solution" class="form-label"></label>
            <small class="text-danger">*</small>
            <input asp-for="Solution" class="form-control" />
            <span asp-validation-for="Solution" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col">
            <label asp-for="LiveUrl" class="form-label"></label>
            <input asp-for="LiveUrl" class="form-control" />
            <span asp-validation-for="LiveUrl" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="DemoUrl" class="form-label"></label>
            <input asp-for="DemoUrl" class="form-control" />
            <span asp-validation-for="DemoUrl" class="text-danger"></span>
        </div>
    </div>
    @* <div class="row form-check mb-3">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="IsFeatured" /> Display As Featured
        </label>
    </div> *@

    <div class="form-check form-switch mb-3">
        <input class="form-check-input" asp-for="IsFeatured" type="checkbox" role="switch" id="switchCheckDefault">
        <label class="form-check-label" for="switchCheckDefault">Display As Featured</label>
    </div>
    <div>
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>


<div>
    <a asp-action="Index">Back to List</a>
</div>

<script>
    (function () {
      let idx = 1;
      document.getElementById('add-image').addEventListener('click', function () {
        const container = document.getElementById('images-container');
        const row = document.createElement('div');
        row.className = 'image-row border rounded p-3 mb-2';
        row.innerHTML = `
          <div class="row g-2 align-items-center">
            <div class="col-md-6">
              <input type="file" name="Images[${idx}].ImageFile" accept="image/*" class="form-control" required>
            </div>
            <div class="col-md-4">
              <input type="text" name="Images[${idx}].AltText" placeholder="Alt text (optional)" class="form-control">
            </div>
            
            <div class="col-md-2 form-check form-switch mb-3">
                <input class="form-check-input" type="checkbox" role="switch" name="Images[${idx}].IsFeatured" value="true" id="img${idx}-featured">
                <label class="form-check-label" for="img${idx}-featured">Featured</label>
                <input type="hidden" name="Images[${idx}].IsFeatured" value="false">
            </div>
          </div>`;
        container.appendChild(row);
        idx++;
      });
    })();
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
